        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="2dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_restaurant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/exo_regular"
                    android:text="@string/lastRestaurant"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSmallSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_regular"
                    android:text="Meat Bar"
                    android:id="@+id/lastRestaurantTxt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textDefaultSize"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/upComingLayout"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutUser"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/upComingOrders"
            android:text="@string/upcomingOrders"
            android:textSize="@dimen/textDefaultSize"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/exo_regular"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/upComingOrderCard"
            app:cardBackgroundColor="@color/colorLight"
            app:cardCornerRadius="2dp"
            android:layout_marginTop="10dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/dateUpcomingReserveTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_regular"

                    android:text="25 Mar"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textDefaultSize" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_regular"
                    android:text="18:00pm"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/timeUpcomingReserveTxt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textDefaultSize"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_regular"
                    android:text="Meat Bar"
                    android:id="@+id/restaurantNameUpcomingReserveTxt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textDefaultSize" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_regular"
                    android:text="6 Guests"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/guestNumberUpcomingReserve"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textDefaultSize"
                    android:textStyle="bold" />
            </RelativeLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>





